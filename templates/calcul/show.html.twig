{% extends 'base-membre.html.twig' %}

{% block title %}Calcul{% endblock %}

{% block body %}
    <div class="breadcrumb-header">
        <ul class="breadcrumb">
            <li><a href="{{ path('app_calcul_index') }}">Calcul de rentabilité</a></li>
            <li><a href="{{ path('app_calcul_index') }}">Vos Devis</a></li>
            <li>{{ calcul.title }}</li>
        </ul>
        <div class="back">
            <div class="back-to-list">
                <a href="{{ path('app_calcul_index') }}">Retour à la liste</a>
            </div>
        </div>
    </div>
    <div class="calcul-data">
        <table class="show-table show-edit">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ calcul.id }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ calcul.title }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ calcul.date ? calcul.date|date('d-m-Y') : '' }}</td>
                </tr>
                <tr>
                    <th>Devis</th>
                    <td>{{ calcul.devis }}</td>
                </tr>
                <tr>
                    <th>Date de début</th>
                    <td>{{ calcul.startDate ? calcul.startDate|date('d-m-Y H:i') : '' }}</td>
                </tr>
                <tr>
                    <th>Date de fin</th>
                    <td>{{ calcul.endDate ? calcul.endDate|date('d-m-Y H:i') : '' }}</td>
                </tr>
                <tr>
                    <th>Durée</th>
                    <td>Durée</td>
                </tr>
                <tr>
                    <th>Frais Fixes</th>
                    <td>
                        <table class="table-fees edit">
                            <thead>
                                <tr>
                                    <th>Titre</th>
                                    <th>Prix</th>
                                    <th>Quantité</th>
                                </tr>
                            </thead>
                            <tbody>    
                                {% for fixedFeeCalcul in calcul.fixedFeeCalculs %}
                                    <tr>
                                        <td>{{ fixedFeeCalcul.fixedFee.title }}</td>
                                        <td>{{ fixedFeeCalcul.fixedFee.price }}</td>
                                        <td>{{ fixedFeeCalcul.quantity }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </td>
                </tr>
                <tr>
                    <th>Frais Variables</th>
                    <td>
                        <table class="table-fees edit">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Titre</th>
                                    <th>Prix</th>
                                    <th>Unité</th>
                                    <th>Type</th>
                                </tr>
                            </thead>
                            <tbody>    
                                {% for variableFee in calcul.variableFees %}
                                    <tr>
                                        <td>{{ variableFee.id }}</td>
                                        <td>{{ variableFee.title }}</td>
                                        <td>{{ variableFee.price }}</td>
                                        <td>{{ variableFee.unit }}</td>
                                        <td>{{ variableFee.type }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </td>
                </tr>
                <tr>
                    <th>Salariés</th>
                    <td>
                        <table class="table-fees edit">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Nom et Prénom</th>
                                    <th>Poste</th>
                                    <th>Rémunération</th>
                                </tr>
                            </thead>
                            <tbody>    
                                {% for salary in calcul.salaries %}
                                    <tr>
                                        <td>{{ salary.id }}</td>
                                        <td>{{ salary.fullName }}</td>
                                        <td>{{ salary.post }}</td>
                                        <td>{{ salary.pay }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="bottom-btn edit-bottom">
            <div>
                <a href="{{ path('app_calcul_edit', {'id': calcul.id}) }}" class="btn">Editer</a>
            </div>
                {{ include('calcul/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
