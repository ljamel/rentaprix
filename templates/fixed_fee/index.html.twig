{% extends 'base-membre.html.twig' %}

{% block title %}FixedFee index{% endblock %}

{% block body %}
    <h1>FixedFee index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Prix</th>
                <th>Unit√©</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>       
            {% for userCalcul in userCalculs %}
                {% for fixed_fee in userCalcul.fixedFees %}
                        <tr>
                            <td>{{ fixed_fee.title }}</td>
                            <td>{{ fixed_fee.price }}</td>
                            <td>{{ fixed_fee.unit }}</td>
                            <td>
                                <a href="{{ path('app_fixed_fee_show', {'id': fixed_fee.id}) }}">show</a>
                                <a href="{{ path('app_fixed_fee_edit', {'id': fixed_fee.id}) }}">edit</a>
                            </td>
                        </tr>
                {% endfor %}
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
