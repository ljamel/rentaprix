{% extends 'base-membre.html.twig' %}

{% block title %}FixedFee index{% endblock %}

{% block body %}
    <h1>Liste des frais fixes</h1>

    {% if fixedFees|default is empty %}
        <P>Aucune donnée à afficher<p/>
    {% else %}
    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Prix</th>
                <th>Unité</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>     
            {% for fixedFee in fixedFees %}
                <tr>
                    <td>{{ fixedFee.title }}</td>
                    <td>{{ fixedFee.price }}</td>
                    <td>{{ fixedFee.unit }}</td>
                    <td>
                        <a href="{{ path('app_fixed_fee_show', {'id': fixedFee.id}) }}">Afficher</a>
                        <a href="{{ path('app_fixed_fee_edit', {'id': fixedFee.id}) }}">Editer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% endif %}
{% endblock %}
