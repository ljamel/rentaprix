{% extends 'base-membre.html.twig' %}

{% block title %}VariableFee index{% endblock %}

{% block body %}
    <h1>VariableFee index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Price</th>
                <th>Unit</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% set feeDefined = 0 %}
        {% for userCalcul in userCalculs %}
            {% for variable_fee in userCalcul.calculs %}
                    {% for variable_fee in variable_fee.VariableFees %}
                        {% set feeDefined = 1 %}
                        <tr>
                            <td>{{ variable_fee.id }}</td>
                            <td>{{ variable_fee.title }}</td>
                            <td>{{ variable_fee.price }}</td>
                            <td>{{ variable_fee.unit }}</td>
                            <td>{{ variable_fee.type }}</td>
                            <td>
                                <a href="{{ path('app_variable_fee_show', {'id': variable_fee.id}) }}">show</a>
                                <a href="{{ path('app_variable_fee_edit', {'id': variable_fee.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% endfor %}
            {% endfor %}
        {% endfor %}

        {% if feeDefined == 0 %}
            <tr>{{ feeDefined }}
                <td colspan="6">Aucune donnée</td>
            </tr>
        {% endif %}
        </tbody>
    </table>

    <a href="{{ path('app_variable_fee_new') }}">Créer un nouveau frais variable</a>

    <a href="{{ path('app_fixed_fee_index') }}" />Ajouter des Frais fixe </a> 
{% endblock %}
